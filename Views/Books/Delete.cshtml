@model library_management_system_dot_net.Models.Book

<div class="bg-gray-900 min-h-[calc(100vh-137px)] flex justify-center p-3">
    <div class="w-full max-w-md mx-auto p-8 bg-gray-800 rounded-lg shadow-lg">
        <h2 class="text-4xl font-bold text-white text-center mb-6">Delete</h2>

        <h3 class="text-2xl font-semibold text-white mb-4">Are you sure you want to delete this?</h3>

        <div class="mb-6">
            <h4 class="text-xl font-semibold text-white mb-2">Book</h4>
            <hr class="border-gray-700 mb-4"/>

            <dl class="grid grid-cols-2 gap-x-4 gap-y-2">
                <dt class="text-gray-400">Title</dt>
                <dd class="text-white">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="text-gray-400">Author</dt>
                <dd class="text-white">@Html.DisplayFor(model => model.Author)</dd>

                <dt class="text-gray-400">ISBN</dt>
                <dd class="text-white">@Html.DisplayFor(model => model.ISBN)</dd>

                <dt class="text-gray-400">Published Year</dt>
                <dd class="text-white">@Html.DisplayFor(model => model.PublishedYear)</dd>

                <dt class="text-gray-400">Amount</dt>
                <dd class="text-white">@Html.DisplayFor(model => model.Amount)</dd>
            </dl>
        </div>

        <form asp-action="Delete" class="mb-4">
            <input type="hidden" asp-for="Id" />
            <div class="flex justify-center">
                <input type="submit" value="Delete" class="bg-red-500 text-white px-6 py-2 rounded hover:bg-red-400 cursor-pointer mr-4"/>
                <a asp-action="Index" class="bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-400 cursor-pointer">Back to List</a>
            </div>
        </form>
    </div>
</div>

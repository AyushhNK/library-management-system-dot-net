@model IEnumerable<library_management_system_dot_net.Models.Book>

<div class="bg-gray-900 min-h-[calc(100vh-137px)] flex justify-center pt-10">
    <div class="w-screen max-w-6xl">
        <div class="text-center mb-8">
            <h2 class="text-4xl font-bold text-white">Books</h2>
        </div>
        <div class="overflow-x-auto bg-gray-800 rounded-lg shadow-lg">
            <table class="min-w-full bg-gray-800 text-white rounded-lg">
                <thead>
                    <tr class="w-full bg-gray-700">
                        <th class="px-6 py-3 text-left text-sm font-semibold">Title</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold">Author</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold">ISBN</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold">Published Year</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold">Amount</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-t border-gray-700">
                            <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Title)</td>
                            <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Author)</td>
                            <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.ISBN)</td>
                            <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.PublishedYear)</td>
                            <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Amount)</td>
                            <td class="px-6 py-4 text-right">
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="text-blue-400 hover:text-blue-300">Edit</a> |
                                <a href="@Url.Action("Details", new { id = item.Id })" class="text-blue-400 hover:text-blue-300">Details</a> |
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="text-red-400 hover:text-red-300">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

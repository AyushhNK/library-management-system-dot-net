@model library_management_system_dot_net.Models.Book

<div class="bg-gray-900 min-h-[calc(100vh-137px)] flex items-center justify-center">
    <div class="w-full max-w-md mx-auto p-8 bg-gray-800 rounded-lg shadow-lg">
        <h2 class="text-4xl font-bold text-white text-center mb-6">Edit</h2>

        <div class="mb-6">
            <h4 class="text-xl font-semibold text-white mb-2">Book</h4>
            <hr class="border-gray-700 mb-4"/>

            <form asp-action="Edit" class="space-y-4">
                <div class="flex flex-wrap -mx-3">
                    <div class="w-full md:w-1/2 px-3 mb-4 md:mb-0">
                        <div class="form-group">
                            <label asp-for="Title" class="text-white"></label>
                            <input asp-for="Title" class="form-input" />
                            <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                    <div class="w-full md:w-1/2 px-3">
                        <div class="form-group">
                            <label asp-for="Author" class="text-white"></label>
                            <input asp-for="Author" class="form-input" />
                            <span asp-validation-for="Author" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>
                <div class="flex flex-wrap -mx-3">
                    <div class="w-full md:w-1/2 px-3 mb-4 md:mb-0">
                        <div class="form-group">
                            <label asp-for="ISBN" class="text-white"></label>
                            <input asp-for="ISBN" class="form-input" />
                            <span asp-validation-for="ISBN" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                    <div class="w-full md:w-1/2 px-3">
                        <div class="form-group">
                            <label asp-for="PublishedYear" class="text-white"></label>
                            <input asp-for="PublishedYear" class="form-input" />
                            <span asp-validation-for="PublishedYear" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>
                <div class="flex flex-wrap -mx-3">
                    <div class="w-full md:w-1/2 px-3 mb-4 md:mb-0">
                        <div class="form-group">
                            <label asp-for="Amount" class="text-white"></label>
                            <input asp-for="Amount" class="form-input" />
                            <span asp-validation-for="Amount" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group flex justify-center">
                    <input type="submit" value="Save" class="bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-400 cursor-pointer"/>
                </div>
            </form>
        </div>
    </div>
</div>
